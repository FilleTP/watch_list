<div class="container-moviecards">
<% search = ["action", "thriller", "drama", "best", "nature", "movie", "scary", "black", "waves", "forest", "car", "plane", "crash", "animal", "power", "president", "USA", "Cuba", "Japan", "fog", "rain", "sun"] %>

<h1><% @lists.each do |list| %></h1>

    <div class="card-list">


    <%= image_tag "https://source.unsplash.com/featured/?#{search.sample}", alt: "Move Image", width: 300, height: 400 %>
      <div class="links">
        <h2 class="list-name"><%= link_to list.name, list_path(list)%></h2>
      </div>
    </div>
    <% search.delete_at(0) %>

    <% end %>
</div>


  <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
