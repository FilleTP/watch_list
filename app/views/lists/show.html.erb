<h1><%=  @list.name %> </h1>

<div class="container-moviecards">
  <% @list.movies.each do |movie| %>
    <div class="card-movie">
      <div class="url_poster">
        <%= image_tag movie.poster_url, alt: "Move Image", width: 300, height: 200 %>
      </div>
      <div class="text-container">
        <h2><%= movie.title %></h2>
        <p><%= movie.overview %></p>
      </div>
      <div class="rating-container">
      <p id="rating">Rating: <%= movie.rating %></p>
      </div>
    </div>
  <% end %>
  </div>
</div>

   <div>
      <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-flat' %>
      <%= link_to 'detete this list', list_path(@list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>


    <div class="bg-white rounded p-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@list, @review] do |f| %>
          <%= f.input :comment, placeholder: 'Add your review here...' %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { id: 'review_rating' } %>
          <%= f.submit class:'btn btn-flat' %>
        <% end %>
    </div>

 <%= link_to 'Back', lists_path, class: 'btn btn-back' %>
